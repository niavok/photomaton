<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.niavok.photomaton" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/wedding_photo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".PreviewActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:noHistory="true">
        </activity>
        <activity
            android:name=".MainChooseActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".GuestbookInstructionsActivity"
            android:label="@string/title_activity_guestbook_instructions"
            android:screenOrientation="landscape"
            android:noHistory="true">
        </activity>
        <activity
            android:name=".PhotoboothInstructionsActivity"
            android:label="@string/title_activity_photobooth_instructions"
            android:screenOrientation="landscape"
            android:noHistory="true">
        </activity>
        <activity
            android:name=".CaptureActivity"
            android:label="@string/title_activity_capture"
            android:screenOrientation="landscape"
            android:noHistory="true">
        </activity>
        <activity
            android:name=".ConfigActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
